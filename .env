# 任意（未設定ならデフォルト）
CONCURRENCY=20
TIMEOUT=30
HTTP_METHOD=HEAD

# 通知全体スイッチ
ENABLE_NOTIFY=true
# 失敗時のみ通知（4xx/5xx/例外 or URL 0件）
NOTIFY_ON_FAILURE_ONLY=false

